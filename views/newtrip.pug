extends layoutBS

block content
  .margin
    .margin3
      h2 Trip Planner
      .margin2
        h4.text-center Start a new trip
        br
        form(method="post")
          .form-row
            .form-group.col-md-6
              label(for="destination") Destination
              input#destination.form-control(name="country" type="text" placeholder="Country")
            .form-group.col-md-6
              label(for="city") City 
              input#city.form-control(name="city" type="text" placeholder="City")
          .form-row
            .form-group.col-md-6
              label(for="departDate") Departure Date
              input#departDate.form-control(name="depdate" type="date" placeholder="06.10.2018")
            .form-group.col-md-6
              label(for="returnDate") Return Date
              input#returnDate.form-control(name="retdate" type="date" placeholder="06.10.2018")
          .form-group
            label(for="hotel") Hotel
            select#hotel(name="hotel").form-control
              option(selected="") Choose...
              option Hilton
              option Sheraton
              option Westin
              option Four Seasons
              option Ritz-Carlton
              option Hyatt
              option Renaissance
              option Embassy Suites
              option InterContinental
              option JetBlue
              option Hyatt Regency
              option Shangri-La
              option Wyndham
              option Grant Hyatt
              option Fairmont
              option JW Marriot
              option Sofitel
              option Loews
              option Mandarin Oriental
              option Conrad
              option Peninsula
          .form-group
            label(for="airline") Airline
            select#airline(name="airline").form-control
              option(selected="") Choose...
              option Asiana Airline
              option Air New Zealand
              option Air France
              option Austrian Airlines
              option All Nippon Airlines
              option Cathay Pacific Airways
              option Delta Air Lines
              option Etihad Airways
              option EVA Air
              option JetBlue
              option Hainan Airline
              option Lufthansa
              option Japan Airlines
              option Qantas Airline
              option Qatar Airways
              option Singapore Airlines
              option Swiss International Air Lines
              option United Airlines
              option Thai Airways
              option Turkish Airlines
              option Virgin Australia
          .form-group
            label(for="purpose") Travel purpose
            input#purpose.form-control(name="purpose" type="text")
          button.btn.btn-primary.btn-lg(type="submit") Go
      br
      br
      br
      br
      br
      p
        | The destination is #{city}, #{country}.
