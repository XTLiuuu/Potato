doctype html
html(lang="en")
.p-3.mb-2.bg-light
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    block head

  body
    ul.nav.justify-content-end
        li.nav-item
          a.nav-link.active.text-dark.font-weight-bold.text-monospace(href="/") Home
        li.nav-item
          if loggedIn
            if status=='0211'
              a.nav-link.active.text-dark.font-weight-bold.text-monospace(href="/flight1") Flights
            else 
              a.nav-link.active.text-dark.font-weight-bold.text-monospace(href="/flight") Flights
          else 
            a.nav-link.active.text-dark.font-weight-bold.text-monospace(href="/flight") Flights
          li.nav-item
            if loggedIn
              if status=='0211'
                a.nav-link.active.text-dark.font-weight-bold.text-monospace(href="/hotel1") Hotels
              else 
                a.nav-link.active.text-dark.font-weight-bold.text-monospace(href="/hotel") Hotels
            else 
              a.nav-link.active.text-dark.font-weight-bold.text-monospace(href="/hotel") Hotels
          li.nav-item
            a#navbarDropdown.nav-link.dropdown-toggle.text-dark.font-weight-bold.text-monospace(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") My account 
            .dropdown-menu(aria-labelledby="navbarDropdown")
              a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="/profile") Profile
              a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="#") Browse History 
              a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="#") Favorate
              a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="/myReviews") My Reviews 
              if loggedIn
                if status=='0211'
                  a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="/users") Google Users
                  a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="/sysUsers") System Users
                a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="/logout") Logout
              else
                a.dropdown-item.text-dark.font-weight-bold.text-monospace(href="/signin") Sign in
    block content
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
